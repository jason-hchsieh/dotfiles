# git (most git command aliases defined in $HOME/.config/git/config)
alias g="git"

# editor
alias vim="nvim"

# safety
alias rm="rm -i"       # prompt before remove
alias cp="cp -i"       # prompt before overwrite
alias mv="mv -i"       # prompt before overwrite

# shell
alias h="history"
alias j="jobs"
alias e="exit"
alias reload="source ~/.zshrc"
